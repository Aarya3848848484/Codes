#include<bits/stdc++.h>
using namespace std;

int main(){
    int n;
    cin>>n;
    int a[n];
    for(int i=0;i<n;i++){
        int x;
        cin>>x;
        a[i] = x;
    }

    int no_of_odds = 0;
    for(int i=0;i<n;i++){
        if(a[i]%2!=0){
            no_of_odds++;
        }
    }
    if(no_of_odds%2==0){
        cout<<n-no_of_odds;
    }
    else{
        cout<<no_of_odds;
    }
    
    
}
