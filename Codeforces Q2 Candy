#include<bits/stdc++.h>
using namespace std;

int main(){
    int n;
    cin>>n;
    long long int sq= n*n;
    long long int start = 1;
    long long int end = sq;
    for(int i=1;i<=n;i++){
        for(int j=1;j<=n/2;j++){
            cout<<start<<" "<<end<<" ";
            start++;
            end--;
        }
        cout<<"\n";
    }
}
